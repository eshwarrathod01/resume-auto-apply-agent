{
  "manifest_version": 3,
  "name": "Resume Auto Apply Agent",
  "version": "1.0.0",
  "description": "Automatically fill job applications on ATS platforms like Lever, Greenhouse, Workday, and Glassdoor",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://jobs.lever.co/*",
    "https://*.lever.co/*",
    "https://*.greenhouse.io/*",
    "https://*.myworkdayjobs.com/*",
    "https://*.glassdoor.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://jobs.lever.co/*",
        "https://*.lever.co/*",
        "https://*.greenhouse.io/*",
        "https://*.myworkdayjobs.com/*",
        "https://*.glassdoor.com/*"
      ],
      "js": ["content-scripts/common.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
